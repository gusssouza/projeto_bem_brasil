@{
    ViewData["Title"] = "Publicar intem a ser doado";
}

<!-- Tela escolha de doação -->


<div id="divPublicar">
<label>Escolha o tipo de item que você deseja doar</label>

<div class="d-grid gap-2 d-md-block" style="text-align: center;">
  <a class="btn btn-primary" type="button" asp-controller="Publicar" asp-action="DoacaoComida"
  style="background-color: #3bca78; box-shadow: 0 4px 9px -4px #2c9f4a;">Comida</a>

