@{
    ViewData["Title"] = "Publicar intem a ser doado";
}

<!-- Tela escolha de doação -->


<div id="divPublicar">
<label>Escolha o tipo de item que você deseja doar</label>

<select id="selectTelaDoacao" class="browser-default custom-select mb-4" style="width: 200px;" onchange="publicar()">
  <option value="1" selected>Comida</option>
  <option value="2">Roupa</option>
  <option value="3">Brinquedo</option>
</select>
</div>

<form class="text-center border border-light p-5" action="#!">
<div id="divPublicarDoacao">
</div>
 <button type="submit" id="btnSubmit" style="visibility: hidden; color: #009791;" asp-controller="Endereco" asp-action="Endereco">Proxímo</button>

 </form>