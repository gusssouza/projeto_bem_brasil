@using bem_brasil.DataFinal
@model Operador
@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bem_brasil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bem_brasil.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/telaAnuncios.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/telaSalvo.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/bb.ico"/>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
      rel="stylesheet"
    />
</head>

<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url(https://i.im.ge/2022/09/21/1DtJbT.fundo-branco-final.jpg);
        height: 300px;
        margin-top: 1px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Login</h2>
          <form asp-controller="Cadastro" asp-action="Logar" method="get">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" id="login" asp-for="Email" class="form-control" />
              <label class="form-label" for="login">Email ou Login</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <input type="password" id="senha" asp-for="Senha" class="form-control" />
              <label class="form-label" for="senha">Senha</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4" onClick="salvar_cookies()" 
             style="background-color: #3bca78; box-shadow: 0 4px 9px -4px #2c9f4a;">
              Entrar
            </button>

            <div class="text-center">
            <p>Não tem uma conta? <a asp-area="" asp-controller="Cadastro" asp-action="Registro" class="link">Cadastre-se</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/publicarPedido.js" asp-append-version="true"></script>
<script src="~/js/editar.js" asp-append-version="true"></script>
<script src="~/js/cookies.js" asp-append-version="true"></script>
<script src="~/js/cep.js" asp-append-version="true"></script>
<script src="~/js/Salvos.js" asp-append-version="true"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"></script>