<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bem_brasil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bem_brasil.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/telaAnuncios.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/telaSalvo.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/bb.ico"/>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
      rel="stylesheet"
    />
</head>
<body id="backgroundLayout">
    <header>
     <!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <!-- Container wrapper -->
  <div class="container">
    <!-- Navbar brand -->
    <a class="navbar-brand me-2" asp-controller="Home" asp-action="Index">
      <img
        src="~/img/logo_bb.png"
        height="26"
        alt="Bem Brasil Logo"
        loading="lazy"
        style="margin-top: -1px; cursor: pointer"
      />
    </a>

    <!-- Toggle button -->
    <button
      class="navbar-toggler"
      type="button"
      data-mdb-toggle="collapse"
      data-mdb-target="#navbarButtonsExample"
      aria-controls="navbarButtonsExample"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fas fa-bars"></i>
    </button>

    <!-- Collapsible wrapper -->
    <div class="collapse navbar-collapse" id="navbarButtonsExample">
      <!-- Left links -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </li>
                <li class="nav-item">
          <a class="nav-link" asp-controller="Home" asp-action="Sobre">Quem somos?</a>
        </li>
      </ul>
      <!-- Left links -->

      <div class="d-flex align-items-center">
        <a class="btn btn-link px-3 me-2" asp-controller="Cadastro" asp-action="Login" style="
        color: rgb(53, 138, 40);">Login</a>

        <a class="btn btn-primary me-3" asp-controller="Cadastro" asp-action="Registro" style="box-shadow: 0 4px 9px -4px #2c9f4a; background-color: #3bca78;" 
        onMouseOver="this.style.backgroundColor='#29B966'" onMouseOut="this.style.backgroundColor='#3bca78'">Cadastre-se</a>
      </div>
    </div>
    <!-- Collapsible wrapper -->



     <ul class="navbar-nav d-flex flex-row">
      <!-- Icon dropdown -->
      <li class="nav-item me-3 me-lg-0 dropdown">
        <a
          class="nav-link dropdown-toggle"
          href="#"
          id="navbarDropdown"
          role="button"
          data-mdb-toggle="dropdown"
          aria-expanded="false"
          style="color: rgb(53, 138, 40);"
        >
          <i class="fas fa-user" style="color: #3bca78;" onMouseOver="this.style.color='#29B966'" onMouseOut="this.style.color='#3bca78'"></i>
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
          <li>
            <a class="dropdown-item" asp-controller="Publicar" asp-action="Editar">Editar dados</a>
          </li>
          <li>
            <a class="dropdown-item" asp-controller="Pedido" asp-action="Pedido">Minhas publicações</a>
          </li>
          <li><hr class="dropdown-divider" /></li>
          <li>
            <a class="dropdown-item" href="#">Something else here</a>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
<!-- Navbar -->
<div class="navbar navbar-expand-lg navbar-light btn btn-primary " style = "box-shadow: 1px 2px 8px 1px rgb(225, 225, 225) ; margin-left:830px ; margin-right:830px ; border-bottom-left-radius:15px ; border-bottom-right-radius:15px ; background-color: #3bca78";>
  <div class="collapse navbar-collapse justify-content-center">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a asp-controller="Home" asp-action="Precisodisso">Preciso disso</a>
        </li>
        <li class="breadcrumb-item">
          <a asp-controller="Home" asp-action="Querodoar">Quero doar</a>
        </li>
      </ol>
    </nav>
  </div>
</div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer" style="text-align: center;">
      <div class="container">
          &copy; 2022 - <a asp-area="" asp-controller="Home" asp-action="Index" style="color: #009791;"><img
      src="~/img/logo_bb.png"
      height="26"
      alt="Bem Brasil Logo"
      loading="lazy"
      style="margin-top: -1px;"/></a> - <a asp-controller="Home" asp-action="Sobre" style="color: #009791;">Quem somos?</a>
       - <a asp-controller="Home" asp-action="Termosdeuso" style="color: #009791;">Termos e condições de uso</a>
      </div> 

  </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/publicarPedido.js" asp-append-version="true"></script>
    <script src="~/js/editar.js" asp-append-version="true"></script>
    <script src="~/js/localStorage.js" asp-append-version="true"></script>
    <script src="~/js/cep.js" asp-append-version="true"></script>
    <script src="~/js/Salvos.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"></script>
    <script src="//code.tidio.co/eqirgiohelsdtidmqzgp1grby7ga9mtw.js" async></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
