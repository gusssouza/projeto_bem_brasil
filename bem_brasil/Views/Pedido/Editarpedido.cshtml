@using bem_brasil.DataFinal
@model Produto
@{
}

<div style="text-align: center">
    <form class="text-center border border-light p-5" asp-controller="Pedido" asp-action="Editar" method="post">
        <p class="h4 mb-4 mt-4" >Editar publicação</p>

        <label>Tipo de alimento:</label>
        <select class="browser-default custom-select mb-4" asp-for="TipoComida">
            <option value="1" selected>Arroz</option>
            <option value="2">Feijão</option>
            <option value="3">Carne</option>
            <option value="4">Cesta básica</option>
        </select>

        <input type="text" id="tituloDoarEditar" class="form-control mb-4" placeholder="Título" asp-for="Titulo">
        <input type="number" id="tamanhoEditar" class="form-control mb-4" placeholder="Tamanho" asp-for="Tamanho">
        <input type="number" id="quantEditar" class="form-control mb-4" placeholder="Quantidade" asp-for="QtdProduto">
        <input type="text" id="validadeEditar" class="form-control mb-4" placeholder="Validade" asp-for="Validade">
        <input type="text" id="linkEditar" class="form-control mb-4" placeholder="Link imagem" asp-for="LinkImagem">
        <input type="text" id="cepEditar" class="form-control mb-4" placeholder="Cep" onblur="pesquisa_editar()" asp-for="CEP">
        <input type="text" id="ruaEditar" class="form-control mb-4" placeholder="Rua" asp-for="Rua">
        <input type="text" id="cidadeEditar" class="form-control mb-4" placeholder="Cidade" asp-for="Cidade">
        <input type="text" id="bairroEditar" class="form-control mb-4" placeholder="Bairro" asp-for="Bairro">
        <input type="number" id="inputBairroNumDoarEditar" class="form-control mb-4" placeholder="Número casa/apto" asp-for="NumeroCasa">
        <div class="form-group">
            <textarea class="form-control rounded-0" id="exampleFormControlTextarea2" rows="3" placeholder="Descrição" asp-for="Descricao"></textarea>
        </div>

        <input type="text" asp-for="CodigoProduto" class="invisible" />
        <button class="btn btn-primary me-3 mb-5" type="submit" style="margin-top: 25px; margin-bottom: 25px;background-color: #3bca78;
        box-shadow: 0 4px 9px -4px #2c9f4a;">Atualizar</button>
    </form>
</div>
